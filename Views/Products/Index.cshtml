        <a href="" class="g40-right-header">Посмотреть все новинки</a>
    </div>
    <div class="g40-product-info">
        @{
            string firstProductClass = "first-product";
            foreach (var product in Model.productsListView.noveltyProducts)
            {
                string availiable = "В наличии";
                string availiableClass = "";
                if (!product.OnSale == true) { availiable = "Нет в наличии"; availiableClass = "not-availiable"; }
                <div class="g40-product @firstProductClass ">
                    <a href="" class="g41-product-ref"></a>
