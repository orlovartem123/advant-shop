                            <a href="" class="img-button"></a>
                            <a href="" class="img-button"></a>
                            <a href="" class="img-button"></a>
                        </div>
                    </div>
                    <a href="" class="g40-right-text">@product.Name</a>
                    <div class="stars">
                        @{ for (int i = 1; i < 6; i++)
                            {
                                if (i > 4)
                                { <img src="/img/svg/empty-star.svg"> }
                                else
                                { <img src="/img/svg/gold-star.svg"> }
                            }
                        }
                    </div>
                    <span class="g40-info-tight-text-availability @availiableClass ">@availiable</span>
                    <span class="g40-price">@String.Format("{0:0,0}", Model.categoriesListView.getProductPrice(product.ProductId)) @Model.categoriesListView.getProductCurrency(product.CurrencyId)</span>
